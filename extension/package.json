{
  "name": "@better-auth/browser-extension-example",
  "displayName": "Composer AI",
  "version": "0.0.2",
  "private": true,
  "description": "AI-Powered Email Assistant",
  "scripts": {
    "dev:chrome": "plasmo dev --taget=chrome-mv3 --env=.env.chrome.development",
    "build:chrome": "plasmo build --taget=chrome-mv3 --env=.env.chrome.production",
    "dev:firefox": "plasmo dev --target=firefox-mv2 --env=.env.firefox.development",
    "build:firefox": "plasmo build --target=firefox-mv2 --env=.env.firefox.production -- --zip",
    "build:no-minify": "plasmo build --no-minify",
    "package": "plasmo package"
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@better-fetch/fetch": "^1.1.18",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@plasmohq/messaging": "^0.7.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.3.34",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.12.0",
    "lucide-react": "^0.539.0",
    "plasmo": "0.90.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rxjs": "^7.8.2",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.6.1",
    "@types/chrome": "0.1.3",
    "@types/node": "20.11.5",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "typescript": "^5.9.2"
  },
  "manifest": {
    "browser_specific_settings": {
      "gecko": {
        "id": "assistant@composer.ai",
        "data_collection_permissions": {
          "required": [
            "websiteContent"
          ]
        }
      }
    },
    "permissions": [
      "$PLASMO_COOKIES_PERMISSIONS"
    ],
    "host_permissions": [
      "$PLASMO_HOST_PERMISSIONS"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "manifest.json"
        ],
        "matches": [
          "$PLASMO_PUBLIC_WEB_URL/*"
        ]
      }
    ]
  }
}